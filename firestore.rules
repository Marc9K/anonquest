rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /surveys/{surveyId} {
      allow read: if request.auth != null
        && request.auth.token.email in resource.data.participants;

      allow read, write: if request.auth != null
        && request.auth.token.email == resource.data.ownerEmail;

      match /questions/{questionId} {
        allow read: if request.auth != null
          && request.auth.token.email in resource.parent.data.participants;

        allow read, write: if request.auth != null
          && request.auth.token.email == resource.parent.data.ownerEmail;

        match /answers/{answerId} {
          allow read, write: if request.auth != null
        }
      }
    }
  }
}