rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /surveys/{surveyId} {
      allow read: if request.auth != null
        && request.auth.token.email in resource.data.participants;

      allow write: if request.auth != null
        && request.auth.uid == resource.data.ownerId;

      match /questions/{questionId} {
        allow read: if request.auth != null
          && request.auth.token.email in resource.parent.data.participants;
      }

      match /questions/{questionId} {
        allow read, write: if request.auth != null
          && request.auth.token.email == resource.parent.data.ownerEmail;
      }

      match /results/{questionId}/answers/{selectedOption} {
        allow read, write: if request.auth != null
          && request.auth.token.email in resource.parent.parent.data.ownerEmail;
      }

      match /results/{questionId}/answers/{selectedOption} {
        allow write: if request.auth != null
          && request.auth.token.email in resource.parent.parent.data.participants;
      }
    }
  }
}